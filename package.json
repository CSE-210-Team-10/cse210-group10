{
  "type": "module",
  "scripts": {
    "build": "python3 ./scripts/build.py && bash ./scripts/build.sh",
    "build:dev": "python3 ./scripts/build.py --mode dev && bash ./scripts/build.sh --mode dev",
    "serve": "npx live-server dist --port=3000 --no-browser",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "./node_modules/.bin/jest --watch",
    "start": "npm run dev",
    "dev": "npm run build:dev && concurrently \"npm run serve\" \"npm run watch\"",
    "lint": "eslint src test && htmlhint src/**/*.html",
    "lint:fix": "eslint src test --fix && htmlhint --fix src/**/*.html",
    "clean": "rm -rf ./dist/*",
    "watch": "onchange 'src/**/*' -- npm run build:dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@supabase/supabase-js": "^2.47.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "eslint-plugin-jsdoc": "^50.5.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "onchange": "^7.1.0",
    "postcss-import": "^16.1.0",
    "rollup": "^2.79.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "node-fetch": "^3.3.2"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "jsdom"
  }
}
